files:
  "/etc/nginx/conf.d/99_laravel.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
        listen 80;
        server_name localhost;
        root /var/app/current/public;  # Make sure it's pointing to the 'public' directory of your Laravel app

        index index.php;  # Laravel's entry point is index.php, not index.html

        location / {
            try_files $uri $uri/ /index.php?$query_string;  # Laravel's route handling
        }

        location ~ \.php$ {
            try_files $uri =404;  # Make sure files exist before attempting to pass them to PHP
            fastcgi_pass 127.0.0.1:9000;  # PHP-FPM to process PHP files
            fastcgi_index index.php;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;  # Tell PHP where the script is
            include fastcgi_params;
        }

        location ~ /\.ht {
            deny all;  # Don't allow access to hidden .ht files
        }
      }
